@using EnvironmentServer.Web.ViewModels.EnvSetup
@model EnvSetupViewModel
@{
    ViewData["Title"] = "Major Version - Environment Setup";
}

<h2>Predefined Versions</h2>
<div class="row row-cols-md-4" style="margin-top: 15px;">
    <div class="col-md-3 px-1"></div>
    <form method="post" asp-action="MinorVersion">
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="MajorShopwareVersion" value="5" />
        <div class="col-md-3 px-1">
            <div class="card mb-2 align-middle d-flex align-content-center" style="height: 370px;">
                <a asp-controller="Env" asp-action="Create" class="text-decoration-none text-body fullHeight justify-content-center d-flex">
                    <img src="~/img/sw5-signet.svg" width="100" height="100" style="padding-top: 15px;" />
                </a>
            </div>
        </div>
    </form>

    <form method="post" asp-action="MinorVersion">
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="MajorShopwareVersion" value="6" />
        <div class="col-md-3 px-1">
            <div class="card mb-2 align-middle d-flex align-content-center" style="height: 370px;">
                <a asp-controller="Env" asp-action="Create" class="text-decoration-none text-body fullHeight justify-content-center d-flex">
                    <i class="bi bi-plus-lg align-self-center" style="font-size: 50px"></i>
                    <img src="~/img/sw6-signet.svg" width="100" height="100" style="padding-top: 15px;" />
                </a>
            </div>
        </div>
    </form>
</div>

<h2>Custom Versions (Expert Mode)</h2>
<div class="row row-cols-md-4" style="margin-top: 15px;">
    <div class="col-md-3 px-1"></div>
    <form method="post" asp-action="MinorVersion">
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="CustomSetupType" value="wget" />
        <div class="col-md-3 px-1">
            <div class="card mb-2 align-middle d-flex align-content-center" style="height: 370px;">
                <a asp-controller="Env" asp-action="Create" class="text-decoration-none text-body fullHeight justify-content-center d-flex">
                    <i class="bi bi-cloud-download align-self-center" style="font-size: 50px"></i>
                    <div class="card-body"><p class="card-text">Download & Extract</p></div>
                </a>
            </div>
        </div>
    </form>

    <form method="post" asp-action="MinorVersion">
        <input type="hidden" asp-for="Name" />
        <input type="hidden" asp-for="CustomSetupType" value="git" />
        <div class="col-md-3 px-1">
            <div class="card mb-2 align-middle d-flex align-content-center" style="height: 370px;">
                <a asp-controller="Env" asp-action="Create" class="text-decoration-none text-body fullHeight justify-content-center d-flex">
                    <i class="bi bi-git align-self-center" style="font-size: 50px"></i>
                    <div class="card-body"><p class="card-text">Clone Git Repository</p></div>
                </a>
            </div>
        </div>
    </form>
</div>
<form method="post" asp-action="MinorVersion">
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="CustomSetupType" value="empty" />
    <button asp-controller="Env" asp-action="Create" class="btn btn-link text-decoration-none text-body fullHeight justify-content-center d-flex">
        <div class="card-body"><p class="card-text">Empty Webspace</p></div>
    </button>
</form>