@model IEnumerable<EnvironmentServer.DAL.Models.Template>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] = "Template Administration";
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Shopware Version</th>
            <th>CreatorID</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in @Model)
        {
            <tr>
                <td>
                    <span>@v.Name</span>
                </td>
                <td>
                    <span>@v.Description</span>
                </td>
                <td>
                    <span>@v.ShopwareVersion</span>
                </td>
                <td>
                    <span>@v.UserID</span>
                </td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id=@v.ID>
                        <button type="submit" class="btn btn-primary">Select</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>