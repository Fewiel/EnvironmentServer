@model EnvironmentServer.Web.ViewModels.Templates.CreateTemplateViewModel
@{
    ViewData["Title"] = "Create Template";
}

<h2>Create Template</h2>

<p>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</p>

<form method="post" asp-action="Create">
    <input type="hidden" asp-for="EnvironmentID" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Template name (A-Z, a-z, 0-9)</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Descirption" class="form-label">Short Descirption</label>
        <input asp-for="Descirption" class="form-control" />
        <span asp-validation-for="Descirption"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>