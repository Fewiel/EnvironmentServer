@model EnvironmentServer.Web.ViewModels.Users.PermissionViewModel

@{
    ViewData["Title"] = "Reights - Roles";
}

<form method="post" asp-action="Permissions" style="width: 400px;">
    <input type="hidden" asp-for=@Model.UserID value=@Model.UserID/>

    @for (int i = 0; i < Model.Permissions.Count; i++)
    {
        <br />
        <div class="form-check form-switch">
            <input type="hidden" asp-for=@Model.Permissions[i].Permission.ID value=@Model.Permissions[i].Permission.ID/>
            <input id=@Model.Permissions[i].Permission.InternalName class="form-check-input" type="checkbox" asp-for=@Model.Permissions[i].Enabled>
            <label class="form-check-label">@Model.Permissions[i].Permission.Name</label>
        </div>
    }

    @for (int i = 0; i < Model.Limits.Count; i++)
    {
        <br />
        <div class="input-group flex-nowrap">
            <span class="input-group-text" id="addon-wrapping">@Model.Limits[i].Limit.Name</span>
            <input type="hidden" asp-for=@Model.Limits[i].Limit.ID value=@Model.Limits[i].Limit.ID />
            <input type="text" class="form-control" asp-for=@Model.Limits[i].Value>
        </div>
    }

    <br />
    <button type="submit" class="btn btn-primary">Edit Userspecific Permissions</button>
</form>