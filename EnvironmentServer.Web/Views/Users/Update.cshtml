@model EnvironmentServer.DAL.Models.User

@{
    ViewData["Title"] = "Update";
}

<div class="d-flex align-items-center justify-content-center fullHeight" style="flex-direction: column;">
    <h4>Editing User: @Model.Username</h4><br />
    <h5>Latest Use: @Model.LastUsed.ToString("dd.MM.yyyy")</h5><br />
    <form method="post" asp-action="Update" style="width: 400px;">
        <input type="hidden" asp-for="ID" />
        <div class="mb-3">
            <label asp-for="Email" class="form-label">E-Mail</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="mb-3">
            <input class="form-check-input" type="checkbox" asp-for="IsAdmin">
            <label class="form-check-label" asp-for="IsAdmin">Admin</label>
        </div>
        <div class="mb-3">
            <input class="form-check-input" type="checkbox" asp-for="Active">
            <label class="form-check-label" asp-for="Active">Active</label>
        </div>
        <div class="mb-3">
            <label asp-for="ExpirationDate" class="form-label">Expiration Date (Leave empty for normal account)</label>
            <input type="datetime-local" asp-for="ExpirationDate" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
            <span asp-validation-for="ExpirationDate"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>