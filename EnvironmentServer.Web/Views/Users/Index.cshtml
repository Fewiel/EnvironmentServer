@model IEnumerable<EnvironmentServer.DAL.Models.User>
@{
    ViewData["Title"] = "Users";
}
<a asp-action="Create">Create new user</a><span> - </span><a asp-action="Regenerate">Regenerate config files</a><span> - </span><a asp-action="UpdateChroot">Update Chroot</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Admin</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usr in Model)
        {
            <tr>
                <td>
                    <span>@usr.ID</span>
                </td>
                <td>
                    <span>@usr.Username</span>
                </td>
                <td>
                    <span>@usr.Email</span>
                </td>
                <td>
                    <span>@usr.IsAdmin</span>
                </td>
                <td>
                    <span @(usr.Active ? "" : "style=\"color:#FF0000; font-weight:bold;\"")>@usr.Active</span>
                </td>
                <td>
                    <a asp-action="ResetPassword" onclick="return confirm('Are you sure?')" asp-route-id="@usr.ID">Reset Password</a>
                    <a asp-action="Update" asp-route-id="@usr.ID">Update</a>
                    <a asp-action="Delete" onclick="return confirm('Are you sure?')" asp-route-id="@usr.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>