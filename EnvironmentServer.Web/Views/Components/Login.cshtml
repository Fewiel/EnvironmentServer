@model EnvironmentServer.DAL.Models.User

@if (Model == null)
{
    <a asp-route="login">Login</a><span>
}
else
{
    <span>@Model.Username</span><span> - </span><a asp-controller="Profile" asp-action="Index">Change password</a><span> - </span><a asp-controller="Login" asp-action="Logout">Logout</a>
}