@using EnvironmentServer.DAL.Enums
@model EnvironmentServer.DAL.Models.Environment

@{
    var sw_version = @Model.Settings.Find(s => s.EnvironmentSetting.Property == "sw_version").Value;
}

<div class="col-md-3 px-1">
    <div class="card mb-2" style="min-height: 310px;">
        <a asp-controller="Item" class="text-decoration-none text-body">
            <p class="text-center">
                <img src="~/img/sw@(sw_version[0])-signet.svg" width="100" height="100" style="padding-top: 15px;" />
                <a asp-controller="Environment" asp-action="Edit" asp-route-id="">
                    <i class="bi bi-pencil-square" style="font-size: 20px; float: right; position: absolute; right: 5px;"></i>
                </a>
            </p>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">SW Version: @sw_version</p>
                <p class="card-text">PHP Version @Model.Version.AsString()</p>
                <div class="d-flex" style="padding-top: 10px;">
                    <a class="btn btn-primary me-auto" href="http://@Model.Address/">Frontend</a>
                    <i class="bi bi-skip-backward-circle"></i>
                    <a class="btn btn-primary" href="http://@Model.Address/@(sw_version[0] == '5' ? "backend" : "admin")">@(sw_version[0] == '5' ? "Backend" : "Admin")</a>
                </div>
                @{ if (Model.Settings.Find(s => s.EnvironmentSetting.Property == "task").Value == "0")
                    {
                        <div class="d-flex" style="padding: 10px 30px 0px 30px;">
                            <i class="bi bi-skip-backward-circle me-auto" style="font-size: 30px;"></i>
                            <i class="bi bi-skip-start-circle me-auto" style="font-size: 30px;"></i>
                            <i class="bi bi-plus-circle me-auto" style="font-size: 30px;"></i>
                            <i class="bi bi-x-circle" style="font-size: 30px;"></i>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex" style="padding: 10px 0px 0px 0px;">
                            <div>
                                <i class="bi bi-info-circle" style="font-size: 30px;"></i>
                            </div>
                            <div style="margin-left: 15px;">
                                <span style="font-size: 90%;">Task running. Please wait.<br />Refresh page in one minute</span>
                            </div>
                        </div>
                    }
                }
            </div>
        </a>
    </div>
</div>