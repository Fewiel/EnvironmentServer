@using EnvironmentServer.DAL.Enums
@using EnvironmentServer.Web.Extensions
@using Microsoft.AspNetCore.Http
@model EnvironmentServer.DAL.Models.Environment
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var usr = HttpContextAccessor.HttpContext.Session.GetObject<EnvironmentServer.DAL.Models.User>("user");
}

@{
    var envVersion = Model.Settings.Find(s => s.EnvironmentSetting.Property == "sw_version");
    var sw_version = envVersion == null ? "N/A" : envVersion.Value;

    var task = Model.Settings.Find(s => s.EnvironmentSetting.Property == "task");
    var taskRunning = task == null ? false : bool.Parse(task.Value);
}

<div class="col-md-3 px-1">
    <div class="card mb-2" style="min-height: 370px;">
        <a asp-controller="Item" class="text-decoration-none text-body">
            <p class="text-center">
                <img src="~/img/sw@(sw_version[0])-signet.svg" width="100" height="100" style="padding-top: 15px;" />
                <a asp-controller="Env" asp-action="Update" asp-route-id="@Model.ID">
                    <i class="bi bi-pencil-square" style="font-size: 20px; float: right; position: absolute; right: 5px;"></i>
                </a>
            </p>
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <span class="card-text">SW Version: @sw_version</span><br />
                <span class="card-text">PHP Version: @Model.Version.AsString()</span><br />
                <span class="card-text">DB-User: @(usr.Username + "_" + @Model.Name)</span><br />
                <span class="card-text">DB-Password: </span><a href="#" onclick="CopyToClipboard('@Model.DBPassword');return false;">Copy password</a><br />
                <div class="d-flex" style="padding-top: 10px;">
                    <a class="btn btn-primary me-auto" href="https://@Model.Address/" target="_blank">Frontend</a>
                    <a class="btn btn-primary" href="https://@Model.Address/@(sw_version[0] == '5' ? "backend" : "admin")" target="_blank">@(sw_version[0] == '5' ? "Backend" : "Admin")</a>
                </div>
                @if (!taskRunning)
                {
                    <div class="d-flex" style="padding: 10px 30px 0px 30px;">
                        <a class="me-auto" asp-controller="Snapshot" asp-route-id=@Model.ID>
                            <i class="bi bi-card-list" style="font-size: 30px;"></i>
                        </a>
                        <a class="me-auto" asp-controller="Snapshot" asp-action="Create" asp-route-id=@Model.ID>
                            <i class="bi bi-plus-circle" style="font-size: 30px;"></i>
                        </a>
                        <a class="me-auto" asp-controller="Env" asp-action="Delete" asp-route-id=@Model.ID>
                            <i class="bi bi-x-circle" onclick="return confirm('Are you sure to delete your Environment?')" style="font-size: 30px;"></i>
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-flex" style="padding: 10px 0px 0px 0px;">
                        <div>
                            <i class="bi bi-info-circle" style="font-size: 30px;"></i>
                        </div>
                        <div style="margin-left: 15px;">
                            <span style="font-size: 90%;">Task running. Please wait.<br />Refresh page in one minute</span>
                        </div>
                    </div>
                }
            </div>
        </a>
    </div>
</div>