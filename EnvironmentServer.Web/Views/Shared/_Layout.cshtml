@using Microsoft.AspNetCore.Http
@using EnvironmentServer.Web.Extensions
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var usr = HttpContextAccessor.HttpContext.Session.GetObject<EnvironmentServer.DAL.Models.User>("user");
}
<!DOCTYPE html>
<html lang="en" class="pageHeight">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EnvironmentServer - Alpha Test - Bugs included</title>
    <link rel="stylesheet" href="~/lib/bootstrap-dark-5/dist/css/bootstrap-night.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="fullHeight">
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="margin-bottom: 0 !important;">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EnvironmentServer.Web</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (usr?.IsAdmin == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Administration
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index">User Management</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a></li>
                                </ul>
                            </li>
                        }
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Knowledge
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                <li class="dropdown-item">
                                    <a class="nav-link" href="https://shopware.atlassian.net/wiki/spaces/CORE/pages/18720195126/Testdaten+Payment+Schnittstellen">Payment Interfaces</a>
                                </li>
                                <li class="dropdown-item">
                                    <a class="nav-link" href="https://www.youtube.com/channel/UC-xCvUIPOXx6o4ZydnwIsng">Shopware Knowledge YouTube</a>
                                </li>
                                <li class="dropdown-item">
                                    <a class="nav-link" href="https://docs.shopware.com/">Shopware Docs</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://github.com/Fewiel/EnvironmentServer">GitHub</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://github.com/Fewiel/EnvironmentServer/issues">Support</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="mailto:p.weitkamp@shopware.com">Contact</a>
                        </li>
                    </ul>
                    <span class="navbar-text">
                        <partial name="/Views/Components/Login.cshtml" model=usr />
                    </span>
                </div>
            </div>
        </nav>
    </header>
    <div class="container pageHeight footer-fix">
        @{
            var msgs = TempData.Get<List<Message>>("messages");
        }
        @if (msgs != null)
        {
            <div class="row">
                @foreach (var msg in msgs)
                {
                    <div class="alert @msg.Class">@msg.Content</div>
                }
            </div>
        }
        <main role="main" class="pb-3 fullHeight">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - EnvironmentServer - Phillip Weitkamp - <a href="https://github.com/Fewiel/EnvironmentServer">GitHub</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-dark-5/dist/js/darkmode.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
